;==================================================================================================
; AddSubExpr
;==================================================================================================
var addSubConst1 = 1 + 2
var addSubConst2 = 2 - 5

func testAddSubExpr()
    assert(1 + 2 == 3)
    assert(2 - 5 == -3)
    assert(addSubConst1 == 3)
    assert(addSubConst2 == -3)
end

;==================================================================================================
; MulDivExpr
;==================================================================================================
var mulDivConst1 = 2 * 2
var mulDivConst2 = 10 / 2
var mulDivConst3 = 5 % 3

func testMulDivExpr()
    assert(2 * 2 == 4)
    assert(10 / 2 == 5)
    assert(5 % 3 == 2)
    assert(mulDivConst1 == 4)
    assert(mulDivConst2 == 5)
    assert(mulDivConst3 == 2)
end

;==================================================================================================
; Run the tests
;==================================================================================================
func main() -> int
    testAddSubExpr()
    testMulDivExpr()
    return 0
end
