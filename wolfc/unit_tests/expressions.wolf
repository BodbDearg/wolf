;==================================================================================================
; AddSubExpr
;==================================================================================================
var addSubConstOps = [
    1 + 2,
    1 + -2,
    -1 + -2,
    2 - 5,
    2 - -5,
    -2 - -5
]

func testAddSubExpr()
    assert(1 + 2 == 3)
    assert(1 + -2 == -1)
    assert(-1 + -2 == -3)
    assert(2 - 5 == -3)
    assert(2 - -5 == 7)
    assert(-2 - -5 == 3)
    assert(addSubConstOps[0] == 3)
    assert(addSubConstOps[1] == -1)
    assert(addSubConstOps[2] == -3)
    assert(addSubConstOps[3] == -3)
    assert(addSubConstOps[4] == 7)
    assert(addSubConstOps[5] == 3)
end

;==================================================================================================
; MulDivExpr
;==================================================================================================
var mulDivConstOps = [
    2 * 2,
    2 * -2,
    -2 * -2,
    10 / 2,
    10 / -2,
    5 % 3,
    5 % 3
]

func testMulDivExpr()
    assert(2 * 2 == 4)
    assert(2 * -2 == -4)
    assert(-2 * -2 == 4)
    assert(10 / 2 == 5)
    assert(10 / -2 == -5)
    assert(5 % 3 == 2)
    assert(5 % -3 == 2)
    assert(mulDivConstOps[0] == 4)
    assert(mulDivConstOps[1] == -4)
    assert(mulDivConstOps[2] == 4)
    assert(mulDivConstOps[3] == 5)
    assert(mulDivConstOps[4] == -5)
    assert(mulDivConstOps[5] == 2)
    assert(mulDivConstOps[6] == 2)
end

;==================================================================================================
; Run the tests
;==================================================================================================
func main() -> int
    testAddSubExpr()
    testMulDivExpr()
    return 0
end
