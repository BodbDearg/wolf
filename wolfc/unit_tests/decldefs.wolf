;==================================================================================================
; Func
;==================================================================================================
func testFuncCall1()
    assert(true)
end

func testFuncCall2(v1: int, v2: int)
    assert(v1 == 10)
    assert(v2 == 20)
end

func testFuncCall3(v1: int, v2: int) -> int
    return v1 * v2
end

; This test checks modifying function arguments
func testFuncCallModifyFuncArgs(v: int) -> int
    assert(v is 10)
    v = 20
    assert(v is 20)
    return v
end

; Test for a bug that happened with argument order being reversed into function calls
func testFunCallArgumentOrder(v1: int, v2: int, v3: int, v4: int, v5: int, v6: int, v7: int, v8: int)
    assert(v1 == 1)
    assert(v2 == 2)
    assert(v3 == 3)
    assert(v4 == 4)
    assert(v5 == 5)
    assert(v6 == 6)
    assert(v7 == 7)
    assert(v8 == 8)
end

func testFunc()
    testFuncCall1()
    testFuncCall2(10, 20)
    assert(testFuncCall3(10, 20) == 200)
    assert(testFuncCall3(20, 20) == 400)
    assert(testFuncCallModifyFuncArgs(10) == 20)
    testFunCallArgumentOrder(1, 2, 3, 4, 5, 6, 7, 8)
end

;==================================================================================================
; VarDecl
;==================================================================================================
let varDeclGlobal1 = 20
let varDeclGlobal2 : int = 30

func testVarDeclCall1()
    assert(varDeclGlobal1 == 20)
    assert(varDeclGlobal2 == 30)
    varDeclGlobal1 = 200
    varDeclGlobal2 = 300
end

func testVarDeclCall2()
    assert(varDeclGlobal1 == 200)
    assert(varDeclGlobal2 == 300)
end

func testVarDecl()
    assert(varDeclGlobal1 == 20)
    assert(varDeclGlobal2 == 30)
    testVarDeclCall1()
    testVarDeclCall2()
    assert(varDeclGlobal1 == 200)
    assert(varDeclGlobal2 == 300)    
    varDeclGlobal1 = 20
    varDeclGlobal2 = 30
    assert(varDeclGlobal1 == 20)
    assert(varDeclGlobal2 == 30)    
end

;==================================================================================================
; Run the tests
;==================================================================================================
func main() -> int
    testFunc()
    testVarDecl()
    return 0
end
