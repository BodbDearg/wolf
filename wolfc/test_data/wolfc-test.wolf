func inputLoop()
	; Keep asking the user for input
	; If input is <= 0 then we will exit 
	var num = 0

	loop
		print("Hello, enter <= 0 to exit or anything else to see this again! 👻: ")
		num = readnum()

		if num <= 0
			break
		end
	end
end

